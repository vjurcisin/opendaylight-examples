<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
  odl:use-default-for-reference-types="true">

    <reference id="actorSystemProvider"
               interface="org.opendaylight.controller.cluster.ActorSystemProvider"/>

    <reference id="topicManager"
               interface="itx.opendaylight.examples.akka.demo.eventbus.api.TopicManager" />

    <bean id="sessionManager" class="itx.opendaylight.examples.akka.demo.sessionservice.impl.SessionManagerImpl">
    </bean>

    <bean id="sessionManagerController" class="itx.opendaylight.examples.akka.demo.sessionservice.impl.controller.SessionManagerController"
          init-method="init" destroy-method="destroy">
        <argument ref="sessionManager"/>
        <argument ref="topicManager"/>
    </bean>

    <service id="sessionManagerService" ref="sessionManager"
             interface="itx.opendaylight.examples.akka.demo.sessionservice.api.SessionManager" />

    <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="sessionmanager/list">
        <action class="itx.opendaylight.examples.akka.demo.sessionservice.impl.cli.ListSessionsCommand">
            <argument ref="sessionManager"/>
        </action>
    </command>
    </command-bundle>

</blueprint>
