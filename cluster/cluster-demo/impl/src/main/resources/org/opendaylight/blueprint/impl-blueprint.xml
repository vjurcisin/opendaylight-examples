<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
  xmlns:odl="http://opendaylight.org/xmlns/blueprint/v1.0.0"
  odl:use-default-for-reference-types="true">

  <reference id="dataBroker"
    interface="org.opendaylight.controller.md.sal.binding.api.DataBroker"
    odl:type="default" />

  <reference id="clusterSingletonServiceProvider"
             interface="org.opendaylight.mdsal.singleton.common.api.ClusterSingletonServiceProvider"/>

  <reference id="actorSystemProvider"
             interface="org.opendaylight.controller.cluster.ActorSystemProvider"/>

  <bean id="provider"
    class="itx.opendaylight.examples.cluster.demo.impl.ClusterdemoProvider"
    init-method="init" destroy-method="close">
    <argument ref="dataBroker" />
  </bean>

  <bean id="odlClusterSingleton"
        class="itx.opendaylight.examples.cluster.demo.impl.ODLClusterSingleton"
        init-method="init" destroy-method="destroy">
    <argument ref="clusterSingletonServiceProvider"/>
  </bean>

  <bean id="clusterDemoActivator"
        class="itx.opendaylight.examples.cluster.demo.impl.ClusterDemoActivator"
        init-method="init" destroy-method="destroy">
    <argument ref="actorSystemProvider"/>
    <argument ref="subscriberManager"/>
    <argument ref="clusterMemberManager"/>
  </bean>

  <bean id="subscriberManager"
        class="itx.opendaylight.examples.cluster.demo.impl.pubsub.SubscriberManager">
  </bean>

  <bean id="clusterMemberManager"
        class="itx.opendaylight.examples.cluster.demo.impl.members.ClusterMemberManager">
  </bean>

  <bean id="akkaClusterSingletonService"
        class="itx.opendaylight.examples.cluster.demo.impl.singleton.AkkaClusterSingletonService"
        init-method="init" destroy-method="destroy">
    <argument ref="actorSystemProvider"/>
  </bean>

  <command-bundle xmlns="http://karaf.apache.org/xmlns/shell/v1.0.0">
    <command name="pubsub/publish">
      <action class="itx.opendaylight.examples.cluster.demo.impl.cli.PublishCommand">
        <property name="actorSystemProvider" ref="actorSystemProvider"/>
      </action>
    </command>
    <command name="pubsub/subscribe">
      <action class="itx.opendaylight.examples.cluster.demo.impl.cli.SubscribeSubscriberCommand">
        <property name="actorSystemProvider" ref="actorSystemProvider"/>
        <property name="subscriberManager" ref="subscriberManager"/>
      </action>
    </command>
    <command name="pubsub/unsubscribe">
      <action class="itx.opendaylight.examples.cluster.demo.impl.cli.UnsubscribeSubscriberCommand">
        <property name="subscriberManager" ref="subscriberManager"/>
      </action>
    </command>
    <command name="pubsub/list">
      <action class="itx.opendaylight.examples.cluster.demo.impl.cli.ListSubscribersCommand">
        <property name="subscriberManager" ref="subscriberManager"/>
      </action>
    </command>
    <command name="cluster/showOdlLeader">
      <action class="itx.opendaylight.examples.cluster.demo.impl.cli.ShowODLLeaderCommand">
        <property name="odlClusterSingleton" ref="odlClusterSingleton"/>
      </action>
    </command>
    <command name="cluster/showMembers">
      <action class="itx.opendaylight.examples.cluster.demo.impl.cli.ShowMembersCommand">
        <property name="clusterMemberManager" ref="clusterMemberManager"/>
      </action>
    </command>
    <command name="cluster/tellSingleton">
      <action class="itx.opendaylight.examples.cluster.demo.impl.cli.TellSingletonCommand">
        <property name="akkaClusterSingletonService" ref="akkaClusterSingletonService"/>
      </action>
    </command>
    <command name="cluster/killSingleton">
      <action class="itx.opendaylight.examples.cluster.demo.impl.cli.KillSingletonCommand">
        <property name="akkaClusterSingletonService" ref="akkaClusterSingletonService"/>
      </action>
    </command>
  </command-bundle>

</blueprint>
